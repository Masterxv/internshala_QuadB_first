<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div id="header">
    <div id="logo">
      <div>
        <h1>HODLINFO <span>.com</span></h1>
        <p><span>Powered By</span> Finstreet</p>
      </div>
    </div>
    <div id="option">
      <select class="select">
        <option value="volvo" selected>INR</option>
      </select>
      <select class="select">
        <option value="volvo" selected>BTC</option>
        <option value="volvo">ETH</option>
        <option value="volvo">USDT</option>
      </select>
    </div>
    <div id="more">
      <div id="timer">58</div>
      <div id="telegram">
        <i class="fab fa-telegram-plane"></i>Connect Telegram
      </div>
      <label class="switch">
        <input type="checkbox" checked />
        <span class="slider round"></span>
      </label>
    </div>
  </div>
  
  <div id="table-div">
    <center>
    <table class="table" id="table_id" cellspacing="0" cellpadding="0">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">name</th>
          <th scope="col">Last</th>
          <th scope="col">Buy / Sell Price</th>
          <th scope="col">volume</th>
          <th scope="col">base_unit</th>
        </tr>
      </thead>
      <tbody>
        <% var i = 0 %>
        <%for (let key in details) { %>
          <% i++ %>
          <tr class="trHover" >
            <td scope="row"><%= i %></td>
            <td scope="row" style="text-transform: uppercase;"><%= details[key].base_unit %>/<%= details[key].quote_unit %></td>
            <td scope="row"><%= details[key].last %></td>
            <td scope="row">â‚¹ <%= details[key].sell %></td>
            <td scope="row"><%= details[key].volume %></td>
            <td scope="row" class="base-unit"><%= details[key].base_unit %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    </center>
  </div>
  

  


<%- include('./includes/end.ejs') %>